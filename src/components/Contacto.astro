---
import { BsWhatsapp } from "react-icons/bs"
import { FiMapPin } from "react-icons/fi";
import { FaPhone } from "react-icons/fa6";


---

<section id="contacto" class="grid grid-cols-1 lg:grid-cols-2 gap-20 mt-20 font-urbanist">
    <div class="text-3xl flex flex-col gap-10">
        <h1>Visitanos</h1>
        <div class="text-xl flex gap-5 items-center">
            <FiMapPin className="text-3xl"/>
            <div>
                <h3 class="font-bold">Dirección:</h3>
                <p>Calle Loma Escondida andador B local C 113 Col. Jesús Elías Piña, Tampico, Tamps.</p>
            </div>
        </div>
        <div class="text-xl flex gap-5 items-center">
            <FaPhone className="text-3xl"/>
            <div>
                <h3 class="font-bold">Teléfono:</h3>
                <p>+52 8332912302</p>
            </div>
        </div>
    </div>
    <div class="flex flex-col gap-10">
        <h1 class="text-3xl">Comunícate con nosotros</h1>
        <form enctype="multipart/form-data" method="POST" class="flex flex-col w-full gap-5">
            <label class="text-xl font-bold" for="">Nombre:</label>
            <input class="text-xl p-2 border rounded" type="text" name="name">
            <label class="text-xl font-bold" for="">Tu mensaje:</label>
            <textarea class="text-xl p-2 border rounded" rows={10} name="message"/>
            <button type="submit" class="flex items-center justify-center gap-2 p-3 mt-2 text-xl bg-zinc-800 text-white rounded">
                 <BsWhatsapp></BsWhatsapp> Enviar
            </button>

        </form>
    </div>
</section>