---
import { BsWhatsapp } from "react-icons/bs"
import { FiMapPin } from "react-icons/fi";
import { FaPhone } from "react-icons/fa6";

---

<section id="contacto" class="grid grid-cols-1 lg:grid-cols-2 gap-10 mt-20 font-urbanist">
    <div class="text-3xl flex flex-col gap-10">
        <h1>Visitanos</h1>
        <div class="text-xl flex gap-5 items-center">
            <FiMapPin className="text-3xl"/>
            <div>
                <h3 class="font-bold">Direccion:</h3>
                <p>Direcci√≥n de la chingadera esa, alc no se que pedo JAJAJAJA</p>
            </div>
        </div>
        <div class="text-xl flex gap-5 items-center">
            <FaPhone className="text-3xl"/>
            <div>
                <h3 class="font-bold">Telefono:</h3>
                <p>+8080808080</p>
            </div>
        </div>
    </div>
    <div class="flex flex-col gap-10">
        <h1 class="text-3xl">Comunicate con nosotros</h1>
        <form onsubmit="" class="flex flex-col w-full gap-5">
            <label class="text-xl font-bold" for="">Nombre:</label>
            <input class="text-xl p-2 border rounded" type="text">
            <label class="text-xl font-bold" for="">Tu mensaje:</label>
            <textarea class="text-xl p-2 border rounded" rows={10}/>
            <button class="flex items-center justify-center gap-2 p-3 mt-2 text-xl bg-zinc-800 text-white rounded">
                 <BsWhatsapp></BsWhatsapp> Enviar
            </button>

        </form>
    </div>
</section>